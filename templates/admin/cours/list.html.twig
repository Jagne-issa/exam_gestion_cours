{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
<h1>Liste des Cours</h1>
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Professeur</th>
            <th>Module</th>
            <th>Classes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for cours in coursList %}
        <tr>
            <td>{{ cours.nom }}</td>
            <td>{{ cours.professeur.nom }}</td>
            <td>{{ cours.module.nom }}</td>
            <td>{{ cours.classes|join(', ') }}</td>
            <td>
                <a href="{{ path('admin_cours_edit', {'id': cours.id}) }}">Modifier</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('admin_cours_new') }}">Cr√©er un nouveau cours</a>
{% endblock %}
