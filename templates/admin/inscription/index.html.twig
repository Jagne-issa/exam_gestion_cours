{% extends 'base.html.twig' %}

{% block title %}Inscriptions{% endblock %}

{% block body %}
<h1>Liste des Inscriptions</h1>
<table>
    <thead>
        <tr>
            <th>Étudiant</th>
            <th>Classe</th>
            <th>Année Scolaire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for inscription in inscriptions %}
        <tr>
            <td>{{ inscription.etudiant.nom }} {{ inscription.etudiant.prenom }}</td>
            <td>{{ inscription.classe.nom }}</td>
            <td>{{ inscription.anneeScolaire }}</td>
            <td>
                <a href="{{ path('admin_inscription_edit', {'id': inscription.id}) }}">Modifier</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('admin_inscription_new') }}">Créer une nouvelle inscription</a>
{% endblock %}
